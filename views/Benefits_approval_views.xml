<odoo>
<!--              ***************************  form   ***************************                 -->
    <record id="view_approval_form"
            model="ir.ui.view">
        <field name="name">approval.form</field>
        <field name="model">hr.employee.benefits.approval</field>
        <field name="arch" type="xml">
            <form string="approval ">
                   <header>
                    <field name = "request_status"
                           widget = "statusbar"/>
                </header>
                <sheet>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="benefit_id"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>







<!--              ***************************  tree   ***************************                 -->
    <record id="view_approval_tree"
            model="ir.ui.view">
        <field name="name">approval.tree</field>
        <field name="model">hr.employee.benefits.approval</field>
        <field name="arch" type="xml">
            <tree string="employee ">
                            <field name="name"/>
            </tree>
        </field>
    </record>








<!--              ***************************  action   ***************************                 -->

<record id="action_approval_views"
        model="ir.actions.act_window">
    <field name="name">Benefits Approval</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.employee.benefits.approval</field>
    <field name="view_mode">tree,form</field>
    <field name="target">current</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create your first benefit approval request!
        </p>
    </field>
</record>



</odoo>
