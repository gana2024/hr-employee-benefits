<odoo>
<!--              ***************************  form   ***************************                 -->
    <record id="view_employee_form"
            model="ir.ui.view">
        <field name="name">employee.form</field>
        <field name="model">hr.employee.benefits</field>
        <field name="arch" type="xml">
            <form string="employee ">
                <sheet>
                        <group>
                        <field name="employee_id"/>
                            <field name="name"/>
                        <field name="benefit_type"/>
                        <field name="amount"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>







<!--              ***************************  tree   ***************************                 -->
    <record id="view_employee_tree"
            model="ir.ui.view">
        <field name="name">employee.tree</field>
        <field name="model">hr.employee.benefits</field>
        <field name="arch" type="xml">
            <tree string="Employee Benefits">
                <field name="employee_id"/>
                <field name="benefit_type"/>
                <field name="amount"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>








<!--              ***************************  action   ***************************                 -->

<record id="action_employee_views"
        model="ir.actions.act_window">
    <field name="name">Employee Benefits</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.employee.benefits</field>
    <field name="view_mode">tree,form</field>
    <field name="target">current</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        </p>
    </field>
</record>



</odoo>
